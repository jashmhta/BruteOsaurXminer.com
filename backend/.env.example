# Production Environment Variables for Backend

# Database Settings
MONGO_URL="mongodb://localhost:27017"
DB_NAME="miners_production"

# Security Settings
ENABLE_RATE_LIMITING=true
MAX_REQUESTS_PER_MINUTE=60
ENABLE_CORS=true
ALLOWED_ORIGINS=https://yourdomain.com,http://localhost:3000
ENABLE_SECURITY_HEADERS=true
REQUEST_TIMEOUT=30
MAX_CONTENT_LENGTH=1048576

# Admin Credentials
ADMIN_EMAIL=your-email@example.com
ADMIN_USERNAME=your-username
ADMIN_PASSWORD=your-secure-password
ADMIN_PASSWORD_HASH="your-bcrypt-hash"
SESSION_SECRET="your-random-session-secret"

# Blockchain Settings
USE_TESTNET=false

# RPC URLs
RPC_ETH_URL="https://rpc.ankr.com/eth"
RPC_POLYGON_URL="https://polygon-rpc.com"
RPC_BSC_URL="https://bsc-dataseed.binance.org"

# Server Configuration
PORT=8001
HOST=0.0.0.0

# WalletConnect
WC_PROJECT_ID="your-walletconnect-project-id"
JWT_SECRET="your-jwt-secret"

# CORS Configuration
CORS_ORIGINS="https://yourdomain.com,http://localhost:3000"
